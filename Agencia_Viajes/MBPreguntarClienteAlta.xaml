<Window x:Class="Proyecto_Troncal.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmación" Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid >
        <Rectangle Stroke="Black" Fill="#FF35ACCC" Opacity="0.75"/>
        <!-- Título del mensaje -->
        <TextBlock Text="¿El cliente está dado de alta?" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="20" FontWeight="Bold" Margin="0,20,0,0" FontFamily="Century Gothic" />

        <!-- Botones Sí y No -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,92,0,0">
            <Button Content="Sí" Style="{StaticResource ModernoBoton}" Width="100" Height="40" Margin="10,0" Click="Si_Click" />
            <Button Content="No" Style="{StaticResource ModernoBoton}" Width="100" Height="40" Margin="10,0" Click="No_Click" />
        </StackPanel>

    </Grid>
</Window>
