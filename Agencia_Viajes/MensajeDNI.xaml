<Window x:Class="Proyecto_Troncal.Rubén_De_Las_Heras_Silveira.MensajeDNI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Troncal.Rubén_De_Las_Heras_Silveira"
        mc:Ignorable="d"
        Title="Window1" Height="350" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle Stroke="Black" Fill="White" Opacity="0.85" Margin="1,0,-1,0" />
        <!-- Ícono -->

        <!-- Texto del mensaje -->
        <TextBlock Name="MensajeTexto" Text="Mensaje predeterminado"
                   HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" FontFamily="Century Gothic" TextWrapping="Wrap" Margin="0,170,0,0" />
        <!-- Botón de Aceptar -->
        <Button Content="Aceptar" Style="{StaticResource ModernoBoton}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Height="40" Margin="0,0,0,20" Click="Aceptar_Click" />
        <Image Name="Icono" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,51,0,0" Width="141" Height="100" />
    </Grid>
</Window>
